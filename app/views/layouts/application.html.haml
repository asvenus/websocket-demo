!!! 5
%html(lang="en")
  %head
    %title= content_for?(:title) ? yield(:title) : "WebsocketRailsDemo"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"

    = javascript_include_tag "application"


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") WebsocketRails Demo

    .container-fluid

      .row-fluid
        .span2
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Channels
              %li
              %li= link_to "Rails", "#", :data => {:chan => "rails"}, :class => "join_chan"
              %li= link_to "Php", "#", :data => {:chan => "php"}, :class => "join_chan"
              %li= link_to "Game", "#", :data => {:chan => "game"}, :class => "join_chan"
        .span10
          = bootstrap_flash
          = yield
